{
  "compilerOptions": {
    "target": "es5",
    "lib": [  // type defined in the libs
      "dom",  // they are placed in the node_modules folder typescript - lib folder
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [ // compile all folders and subfolders
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [ // don't compile node_modules
    "node_modules"
  ]
}
